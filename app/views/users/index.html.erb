<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー名_部分テンプレート(_user)-->
      <%= render 'user', user: @user %>

      <!--投稿エラーメッセージ_部分テンプレート(_error)-->
      <%= render 'layouts/error', model: @newbook %>

      <!--新規投稿_部分テンプレート(_book)-->
      <%= render 'books/book', newbook: @newbook %>
    </div>

      <!--ユーザー一覧-->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(50,50) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="row text-center">
          <%= paginate @users %>
        </div>
      </div>
  </div>
</div>