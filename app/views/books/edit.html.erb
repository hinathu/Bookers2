
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <!--投稿エラーメッセージ_部分テンプレート(_error)-->
      <%= render 'layouts/error', model: @book %>

      <%= form_with model: @book do |f| %>
        <label for="inputTitle">Title</label> </br>
        <%= f.text_field :title %> </br>
        <label for="inputBody">Opinion</label> </br>
        <%= f.text_area :body %> </br>

        <%= f.submit 'Update Book', class:"btn btn-success" %>

        <div>
          <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>

